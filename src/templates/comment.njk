<div class="comment">
	<div class="comment__author"> {{ author }} </div>
	<div class="comment__date"> {{ date }} </div>
	<div class="comment__text"> {{ comment }} </div>
	<div class="comment__controls">
		<div class="comment__reply i-comment-reply">reply</div>
		<div class="comment__edit i-comment-edit">edit</div>
		<div class="comment__remove i-comment-remove">remove</div>
	</div>
	<div class="comment__info">
		<div class="comment__down i-comment-down">-</div>
		<div class="comment__rating"> {{ rating }} </div>
		<div class="comment__up i-comment-up">+</div>
	</div>
</div>